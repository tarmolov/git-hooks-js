    "coverage": "istanbul cover _mocha --recursive tests"
  },
  "main": "lib/git-hooks",
  "files": [
    "bin",
    "examples",
    "lib"
  ],
  "devDependencies": {
    "chai": "4.1.2",
    "eslint": "4.19.1",
    "eslint-config-loris": "9.1.0",
